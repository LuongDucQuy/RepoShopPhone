

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }
</style>

<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">Quên mật khẩu</h1>
        </div>
    </div>
    <div class="row row-item-new">
        <div class="col-md-12">
            <form method="post" action="@Url.Action("ForgotPassword", "Home")">
                @* Anti-Forgery Token for CSRF Protection *@
                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Email<span>*</span></label>
                    <input type="email" name="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Gửi liên kết đặt lại mật khẩu" />
                </div>
            </form>
        </div>
    </div>
</div>
