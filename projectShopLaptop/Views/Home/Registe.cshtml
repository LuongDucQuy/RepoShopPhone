@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Container styling */
    .container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Registration form styling */
    .form.registration {
        text-align: center;
    }

        .form.registration .logo img {
            width: 50px;
            margin-bottom: 20px;
        }

        .form.registration form p {
            margin-bottom: 15px;
            text-align: left;
        }

        .form.registration label {
            font-weight: bold;
            color: #333;
        }

        .form.registration input[type="text"],
        .form.registration input[type="email"],
        .form.registration input[type="password"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form.registration input[type="submit"] {
            width: 100%;
            padding: 10px;
            border: none;
            background-color: #007bff;
            color: #fff;
            font-size: 16px;
            font-weight: bold;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }

            .form.registration input[type="submit"]:hover {
                background-color: #0056b3;
            }

        /* Error message styling */
        .form.registration div span {
            color: red;
            font-size: 14px;
        }


    .container-fluid h5 {
        color: #fff;
        font-size: 18px;
        font-weight: bold;
    }

    .container-fluid p,
    .container-fluid a {
        font-size: 14px;
        color: #adb5bd;
    }

        .container-fluid a:hover {
            color: #fff;
            text-decoration: none;
        }

    /* Social buttons */
    .btn-square {
        width: 36px;
        height: 36px;
        line-height: 36px;
        border-radius: 50%;
        text-align: center;
        background-color: #007bff;
        color: #fff;
        margin-right: 8px;
    }

        .btn-square i {
            font-size: 18px;
        }

    /* Footer payment section */
    .border-top {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 20px;
    }

</style>
    <div class="container clearfix">
        <div class="form registration">
            <a class="logo" href="@Url.Action("Index", "Home")">
                <img src="~/img/logoLogin.png" alt="Logo" />
            </a>
            <form method="post" action="@Url.Action("Registe", "Home")">
                <p>
                    <label>Tên hiển thị<span>*</span></label>
                    <input type="text" name="name" required>
                </p>
                <p>
                    <label>Tên đăng nhập<span>*</span></label>
                    <input type="text" name="user" required>
                </p>
                <p>
                    <label>Email<span>*</span></label>
                    <input type="email" name="email" required>
                </p>
                <p>
                    <label>Mật khẩu<span>*</span></label>
                    <input type="password" name="password" required>
                </p>
                <p>
                    <label>Nhập lại mật khẩu<span>*</span></label>
                    <input type="password" name="confirmPassword" required>
                </p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <span>@error.ErrorMessage</span><br />
                        }
                    </div>
                }
                <p>
                    <label>
                        <a href="@Url.Action("Login", "Home")">Bạn đã có tài khoản?</a>
                    </label>
                    <input type="submit" value="Đăng kí" />
                </p>
            </form>
        </div>
    </div>
